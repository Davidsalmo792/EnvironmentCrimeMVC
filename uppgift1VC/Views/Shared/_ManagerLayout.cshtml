<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <title>Småstads kommun</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/style.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <div id="wrapper">
            <header id="logo">
                <h1>Småstad</h1>
                <p>Kommunen där vi bryr oss om varandra</p>
            </header><!-- End header -->


            <nav>
                <ul>
                    <li><a class="reports" asp-controller="Manager" asp-action="StartManager">Start(Ärenden)</a></li>
                    <li class="right"><a class="logout" asp-controller="Home" asp-action="Index">Logga ut</a></li>
                </ul>
            </nav><!-- End Nav -->

            <div id="content">

                @RenderBody()

                <footer>
                    &copy; Småstads Kommun All rights reserved.
                </footer>
            </div><!-- End Content -->
        </div><!-- End Wrapper -->
    </div>
</body>
</html>
