@{
    @model Errand

}


<div id="content">
    <section id="mainColumn">
        <h2>Välkommen att fylla i din anmälan av miljöbrott</h2>
        <p class="info">I Småstad är inga brott för små för att anmälas</p>

        <p>Fyll i formuläret nedan, alla rutor markerade med stjärna (*) måste fyllas i.</p>

        <form method="post" asp-controller="Home" asp-action="Validate">
            <div asp-validation-summary="All"></div>

            <p>
                <input type="hidden" name="isSubmitted" value="true" />
            </p>
            <p>
                <label asp-for="Place" class="label">Var har brottet skett någonstans?</label><br />
                <input asp-for="Place" /> *
            </p>
            <p>
                <label asp-for="TypeOfCrime" class="label"></label><br />
                <input asp-for="TypeOfCrime" /> *
            </p>
            <p>
                <label asp-for="DateOfObservation" class="label">När skedde brottet?</label><br />
                <input asp-for="DateOfObservation" /> *
            </p>
            <p>
                <label asp-for="InformerName" class="label"></label><br />
                <input asp-for="InformerName" /> *
            </p>
            <p>
                <label asp-for="InformerPhone" class="label"></label><br />
                <input asp-for="InformerPhone" /> *
            </p>
            <p>
                <label asp-for="Observation" class="label">Beskriv din observation<br /> (ex. namn på misstänkt person):</label><br />
                <textarea asp-for="Observation" rows="5" cols="16"></textarea>
            </p>
            <p>
                <input class="button" type="submit" value="Skicka in" />
            </p>
        </form>
    </section><!-- End Left -->
</div>
