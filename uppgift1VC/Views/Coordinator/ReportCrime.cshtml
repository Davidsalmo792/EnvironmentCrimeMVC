@{
    @model Errand
    //Layout = "_LoginCoordinatorLayout";
}
<div id="content">
    <h2>Rapportera brott</h2>
    <p class="info">Du är inloggad som samordnare</p>

    <p>Fyll i formuläret nedan, alla rutor markerade med stjärna (*) måste fyllas i</p>
    <form method="post" asp-controller="Home" asp-action="Validate">
        <div asp-validation-summary="All"></div>
        <p>
            <input type="hidden" name="isSubmitted" value="true" />
        </p>
        <p>
            <span asp-for="Place" class="label">Var har brottet skett någonstans?</span><br />
            <input asp-for="Place" /> *
        </p>
        <p>
            <span asp-for="TypeOfCrime" class="label">Vilken typ av brott?</span><br />
            <input asp-for="TypeOfCrime" /> *
        </p>
        <p>
            <span asp-for="DateOfObservation" class="label">När skedde brottet?</span><br />
            <input asp-for="DateOfObservation" /> *
        </p>
        <p>
            <span asp-for="InformerName" class="label">Fullständigt namn</span><br />
            <input asp-for="InformerName" /> *
        </p>
        <p>
            <span asp-for="InformerPhone" class="label">Din telefon:</span><br />
            <input asp-for="InformerPhone" /> *
        </p>
        <p>
            <span asp-for="Observation" class="label">Beskriv din observation<br /> (ex. namn på misstänkt person):</span><br />
            <textarea asp-for="Observation" rows="5" cols="16"></textarea>
        </p>
        <p>
            <input class="button" type="submit" value="Skicka in" />
        </p>
    </form>


</div><!-- End Content -->