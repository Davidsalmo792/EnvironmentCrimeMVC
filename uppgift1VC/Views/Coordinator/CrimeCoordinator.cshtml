@{
    Layout = "_LoginCoordinatorLayout";
}
@model IErrandRepository
<div id="content">
    <h2>Detaljer för ärendet</h2>
    <p class="info">Du är inloggad som samordnare</p>




    @await Component.InvokeAsync("ErrandList",ViewBag.ID)


    <section id="bottomColumn">
        <h3>Redigera ärende</h3>
        <p>
            Ange enhet:
            <select name="department">
                <option selected="selected">Välj</option>
                @foreach (Department errand in Model.Departments)
                {
                    <option>@errand.DepartmentName</option>
                }
            </select>
        </p>
        <p><input class="button" type="submit" value="Spara" /></p>
    </section>


</div><!-- End Content -->